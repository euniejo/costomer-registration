@model CustomerToManageModel

<h2>Edit A Customer</h2>

<form asp-action="ProcessEditRequest" asp-route-group="@ViewData["CurrentGroup"]" method ="post">
    @Html.Partial("_CustomerFormFields", Model)

    <!-- Edit/Cancel Button -->
    <div>
        <button type="submit" class="btn btn-primary">Edit Customer</button>
        <a asp-controller="Customer" asp-action="GetCustomerByGroup" asp-route-group="@ViewData["CurrentGroup"]" class="btn btn-primary">Cancel</a>
    </div>
</form>
